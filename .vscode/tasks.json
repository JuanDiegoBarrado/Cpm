{
	"version": "2.0.0",

	// configuraciones de COMPILACIÓN de los distintos proyectos Java en el proyecto
	"tasks": [
		// Configuración de compilación para lanzar el analizador léxico, genera tanto el AnalizadorTiny como compila las clases Java del resto del analizador
		{
			"label": "preLaunchTasks",
			"type": "shell",
			"dependsOn": ["generateLexiconAnalyzer", "compileReconLexicon", "generateSyntaxAnalyzer", "compileReconSyntax"],
		},
		// Configuración de compilación de las clases java que dan soporte al analizadorLexico
		{
			"label": "compileReconLexicon",
			"type": "shell",
			"command": "javac -d ${workspaceFolder}/lexicon/bin -cp ${workspaceFolder}/lexicon/bin ${workspaceFolder}/lexicon/src/*.java",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		// Configuración de compilación de las clases java que dan soporte al analizadorSintactico
		{
			"label": "compileReconSyntax",
			"type": "shell",
			"command": "javac -d ${workspaceFolder}/syntax/bin -cp ${workspaceFolder}/syntax/bin ${workspaceFolder}/syntax/src/*.java",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		// Configuración de generación de la clase AnalizadorSintacticoTiny por parte de CUP
		{
			"label": "generateSyntaxAnalyzer",
			"type": "shell",
			"command": "java -cp ${workspaceFolder}/syntax/src/cup.jar java_cup.Main -symbols LexiconClass -parser AnalizadorSintacticoTiny -package ${workspaceFolder}/syntax/src -nopositions ${workspaceFolder}/syntax/Tiny.cup",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		// Configuración de generación de la clase AnalizadorLexicoTiny por parte de JFLEX
		{
			"label": "generateLexiconAnalyzer",
			"type": "shell",
			"command": "java -cp lib/jflex.jar jflex.Main ${workspaceFolder}/lexicon/lexicon.l -d ${workspaceFolder}/lexicon/src",
			"group": {
				"kind": "build",
				"isDefault": true
			}			
		}
	]
}